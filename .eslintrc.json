{
    "env": {
        "node": true,
        "mocha": true
    },
    "extends": "airbnb-base",
    "rules": {
        "max-len": ["error", 120, { "ignoreRegExpLiterals": true }],
        "indent": ["warn", 2],
        "no-console": [0],
        "no-use-before-define": [0],
        "prefer-arrow-callback": ["warn"],
        "prefer-template": [0],
        "arrow-body-style": [0],
        "no-underscore-dangle": [0],
        "object-shorthand": [0],
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }]
    }
}
